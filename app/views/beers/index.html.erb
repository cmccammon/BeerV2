<div class="row">
  <div class="col s12">

    <h2>Search for beers</h2>

    <%= form_tag beers_path, :method => 'get' do %>
    <div class="input-field">
      <%= label_tag 'search', 'search for beers' %>
      <%= text_field_tag :search, params[:search] %>
      <button class="btn waves-effect waves-light" name="action" type="submit">Submit
        <i class="material-icons right">send</i>
      </button>
    </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col s12">
    <table>
      <thead>
        <tr>
          <th>Beer Name</th>
          <th>Style</th>
          <th>ABV</th>
          <th>availability</th>
        </tr>
      </thread>

      <tbody>
        <tr>
        <% @beers.each do |beer| %>
          <td><%= truncate(beer.name, length: 28, separator: ' ') %></td>

          <li><%= image_tag(beer.labels[:icon]) if beer.labels %></li>
          <li>ABV:
            <%= beer.abv %></li>

          <li>IBU:
            <%= beer.ibu if beer.ibu%></li>

          <li>Avalilability:
            <%= beer.available.name if beer.available %></li>

          <li>description:
            <%= truncate(beer.description, length: 278, separator: ' ')  if beer.description %></li>

            <%= link_to "Beer details", beers_show_path(id: beer.id), class: "light-blue-text"%>
            <% if user_signed_in? %>
            <%= link_to "New Entry", new_post_path(beer_id: beer.id), class: "light-blue-text"%>
            <% end %>
        </ul>
        <% end %>
    </div>
</div>
